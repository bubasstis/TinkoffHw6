<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sem.tinkoffhw6.MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_first_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Задание #1"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_second_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Задание #2"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_third_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Задание #3"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_fourth_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Задание #4"/>

</LinearLayout>
